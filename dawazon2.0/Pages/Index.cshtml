@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container my-5">
    <div class="row">
        <h2 class="mb-4 col-9">Resultados alaba</h2>
        {% if isMyProductos %}
        <button class="col-3 btn btn-gradient" onclick="save(this)">
            añadir producto
        </button>
        {% endif %}
    
    </div>
    <div id="grid-productos" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% if productos.content is empty %}
        <div class="alert alert-warning">No se encontraron productos. </div>
        {% endif %}
        {% for product in productos.content %}
        <div class="col">
            <div class="card h-100 p-3 bg-white">
                <div class="img-container">
                    {% if product.images is not empty %}
                    <img src="/files/{{product.images[0]}}" alt="{{product.name}}">
                    {% endif %}
                </div>
                <div class="card-body px-0 pb-0">
                    <div class="product-title">{{product.name}}</div>

                    <div class="price-container mt-2">
                        <span class="price-symbol">{{product.price}}€</span>
                    </div>
                    {% if product.stock > 0 %}
                    <span class="badge bg-success">En stock</span><br>
                    <span style="font-size: 0.8rem">Stock: {{product.stock}}</span>
                    {% else %}
                    <span class="badge bg-danger">AGOTADO</span><br>
                    <span style="font-size: 0.8rem">No disponible</span>
                    {% endif %}
                    <a href="/products/{{product.id}}" class="btn btn-amazon">Ver detalles</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    {# Pagination Section #}
    {% if not productos.empty and productos.totalPages > 1 %}
    <div class="row mt-4">
        <div class="col-12">
            <nav aria-label="Navegación de páginas">
                <ul class="pagination justify-content-center">
                    {# First Page Button #}
                    <li class="page-item {% if productos.first %}disabled{% endif %}">
                        <a class="page-link" 
                           href="?page=0{% if productos.sortBy %}&sortBy={{ productos.sortBy }}{% endif %}{% if productos.direction %}&direction={{ productos.direction }}{% endif %}{% if param.name %}&name={{ param.name }}{% endif %}{% if param.categoria %}&categoria={{ param.categoria }}{% endif %}"
                           aria-label="Primera">
                            <span aria-hidden="true">&laquo;&laquo;</span>
                        </a>
                    </li>

                    {# Previous Page Button #}
                    <li class="page-item {% if productos.first %}disabled{% endif %}">
                        <a class="page-link" 
                           href="?page={{ productos.pageNumber - 1 }}{% if productos.sortBy %}&sortBy={{ productos.sortBy }}{% endif %}{% if productos.direction %}&direction={{ productos.direction }}{% endif %}{% if param.name %}&name={{ param.name }}{% endif %}{% if param.categoria %}&categoria={{ param.categoria }}{% endif %}"
                           aria-label="Anterior">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    {# Current Page Info #}
                    <li class="page-item active">
                        <span class="page-link">
                            Página {{ productos.pageNumber + 1 }} de {{ productos.totalPages }}
                        </span>
                    </li>

                    {# Next Page Button #}
                    <li class="page-item {% if productos.last %}disabled{% endif %}">
                        <a class="page-link" 
                           href="?page={{ productos.pageNumber + 1 }}{% if productos.sortBy %}&sortBy={{ productos.sortBy }}{% endif %}{% if productos.direction %}&direction={{ productos.direction }}{% endif %}{% if param.name %}&name={{ param.name }}{% endif %}{% if param.categoria %}&categoria={{ param.categoria }}{% endif %}"
                           aria-label="Siguiente">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>

                    {# Last Page Button #}
                    <li class="page-item {% if productos.last %}disabled{% endif %}">
                        <a class="page-link" 
                           href="?page={{ productos.totalPages - 1 }}{% if productos.sortBy %}&sortBy={{ productos.sortBy }}{% endif %}{% if productos.direction %}&direction={{ productos.direction }}{% endif %}{% if param.name %}&name={{ param.name }}{% endif %}{% if param.categoria %}&categoria={{ param.categoria }}{% endif %}"
                           aria-label="Última">
                            <span aria-hidden="true">&raquo;&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    {# Optional: Show total results info #}
    <div class="row">
        <div class="col-12 text-center text-muted">
            <small>
                Mostrando {{ productos.totalPageElements }} de {{ productos.totalElements }} productos
            </small>
        </div>
    </div>
    {% endif %}

    <script>
        function save(element) {
            window.location.href = `/auth/me/products/save`;
        }
    </script>
</div>