@model dawazon2._0.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Datos de envío";
}

<div class="container my-4">
    <div class="row g-4">

        @* ── Columna izquierda: formulario ── *@
        <div class="col-12 col-lg-7">
            <h2 class="fw-bold mb-1">Datos de envío</h2>
            <p class="text-muted small mb-4">Completa los datos para procesar tu pedido</p>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-action="Checkout" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="CartId" />

                @* ── Información personal ── *@
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header" style="background:#f8f9fa;">
                        <i class="bi bi-person me-2"></i><strong>Información del cliente</strong>
                    </div>
                    <div class="card-body">
                        <p class="text-muted small mb-3"><i class="bi bi-person-circle me-1"></i>Datos personales</p>

                        <div class="row g-3">
                            <div class="col-12 col-md-6">
                                <label asp-for="Name" class="form-label small fw-semibold">
                                    Nombre completo <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="John Doe" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="col-12 col-md-6">
                                <label asp-for="Email" class="form-label small fw-semibold">
                                    Correo electrónico <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Email" class="form-control" placeholder="john@ejemplo.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Phone" class="form-label small fw-semibold">
                                    Teléfono <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Phone" class="form-control" placeholder="666333444" />
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                                <div class="form-text">Número de contacto para el envío</div>
                            </div>
                        </div>

                        <hr class="my-3">
                        <p class="text-muted small mb-3"><i class="bi bi-geo-alt me-1"></i>Dirección de envío</p>

                        <div class="row g-3">
                            <div class="col-9">
                                <label asp-for="Street" class="form-label small fw-semibold">
                                    Calle <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Street" class="form-control" placeholder="Gran Vía" />
                                <span asp-validation-for="Street" class="text-danger small"></span>
                            </div>
                            <div class="col-3">
                                <label asp-for="Number" class="form-label small fw-semibold">
                                    Número <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Number" class="form-control" placeholder="1" type="number" min="1" />
                                <span asp-validation-for="Number" class="text-danger small"></span>
                            </div>
                            <div class="col-12 col-md-6">
                                <label asp-for="City" class="form-label small fw-semibold">
                                    Ciudad <span class="text-danger">*</span>
                                </label>
                                <input asp-for="City" class="form-control" placeholder="Madrid" />
                                <span asp-validation-for="City" class="text-danger small"></span>
                            </div>
                            <div class="col-12 col-md-6">
                                <label asp-for="Province" class="form-label small fw-semibold">
                                    Provincia <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Province" class="form-control" placeholder="Madrid" />
                                <span asp-validation-for="Province" class="text-danger small"></span>
                            </div>
                            <div class="col-12 col-md-6">
                                <label asp-for="Country" class="form-label small fw-semibold">
                                    País <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Country" class="form-control" placeholder="España" />
                                <span asp-validation-for="Country" class="text-danger small"></span>
                            </div>
                            <div class="col-12 col-md-6">
                                <label asp-for="PostalCode" class="form-label small fw-semibold">
                                    Código postal <span class="text-danger">*</span>
                                </label>
                                <input asp-for="PostalCode" class="form-control" placeholder="28013" type="number" />
                                <span asp-validation-for="PostalCode" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                @* ── Información importante ── *@
                <div class="alert alert-info small mb-4">
                    <strong><i class="bi bi-info-circle me-1"></i>Información importante:</strong>
                    <ul class="mb-0 mt-1">
                        <li>Todos los campos marcados con <strong>*</strong> son obligatorios</li>
                        <li>Revisa cuidadosamente los datos antes de continuar</li>
                        <li>Recibirás confirmación del pedido en tu correo electrónico</li>
                    </ul>
                </div>

                @* ── Botones ── *@
                <div class="d-flex gap-3 align-items-center mb-3">
                    <a asp-controller="CartMvc" asp-action="Index"
                       class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Volver al carrito
                    </a>
                    <button type="submit" class="btn btn-gradient flex-grow-1 py-2 fw-bold">
                        Continuar con el pago <i class="bi bi-arrow-right ms-1"></i>
                    </button>
                </div>

                <p class="text-center text-muted small">
                    <i class="bi bi-shield-lock me-1"></i>
                    Tus datos están protegidos y serán utilizados únicamente para procesar tu pedido
                </p>
            </form>
        </div>

        @* ── Columna derecha: resumen del pedido ── *@
        <div class="col-12 col-lg-5">
            <div class="card shadow-sm border-0 sticky-top" style="top: 80px;">
                <div class="card-header" style="background:#f8f9fa;">
                    <i class="bi bi-receipt me-2"></i><strong>Resumen del pedido</strong>
                </div>
                <div class="card-body p-0">
                    @foreach (var line in Model.Lines)
                    {
                        <div class="d-flex justify-content-between align-items-start px-3 py-2 border-bottom">
                            <div>
                                <div class="fw-semibold small">@line.ProductName</div>
                                <div class="text-muted" style="font-size:.78rem;">Cantidad: @line.Quantity</div>
                            </div>
                            <span class="fw-semibold small text-nowrap ms-3">@line.TotalPrice.ToString("F2") €</span>
                        </div>
                    }
                </div>
                <div class="card-footer bg-white">
                    <div class="d-flex justify-content-between small text-muted mb-1">
                        <span>Subtotal (@Model.TotalItems producto@(Model.TotalItems != 1 ? "s" : "")):</span>
                        <span>@Model.Total.ToString("F2") €</span>
                    </div>
                    <div class="d-flex justify-content-between small text-muted mb-2">
                        <span>Envío:</span>
                        <span class="text-success fw-semibold">GRATIS</span>
                    </div>
                    <hr class="my-2">
                    <div class="d-flex justify-content-between fw-bold">
                        <span>Total:</span>
                        <span style="font-size:1.15rem;">@Model.Total.ToString("F2") €</span>
                    </div>
                    <div class="mt-2">
                        <span class="badge bg-success w-100 py-2">
                            <i class="bi bi-truck me-1"></i>¡Envío GRATIS!
                        </span>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
