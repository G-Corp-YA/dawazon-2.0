@model dawazon2._0.Models.CartOrderDetailViewModel

@{
    ViewData["Title"] = "Detalles del pedido";
}

<div class="container col-lg-10 my-5">

    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="CartMvc" asp-action="MyOrders">Mis pedidos</a>
            </li>
            <li class="breadcrumb-item active">Detalles</li>
        </ol>
    </nav>

    <h2 class="mb-1">Detalles del pedido</h2>
    <p class="text-muted small mb-4">
        Pedido realizado el 
        @if (Model.CreatedAt != DateTime.MinValue)
        {
            @Model.CreatedAt.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture)
        }
        &nbsp;| Código de pedido: <span class="font-monospace">@Model.Id</span>
    </p>

    <div class="row g-4">

        <div class="col-lg-8">

            @* Tabla de productos *@
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-0">
                    <table class="table align-middle mb-0">
                        <thead style="background-color: #f3f3f3;">
                            <tr>
                                <th class="py-3 px-4" style="font-size:0.8rem;color:#555;font-weight:600;">PRODUCTO</th>
                                <th class="py-3 px-3 text-center" style="font-size:0.8rem;color:#555;font-weight:600;">CANTIDAD</th>
                                <th class="py-3 px-3 text-center" style="font-size:0.8rem;color:#555;font-weight:600;">ESTADO</th>
                                <th class="py-3 px-4 text-end" style="font-size:0.8rem;color:#555;font-weight:600;">PRECIO</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var line in Model.Lines)
                            {
                                <tr>
                                    <td class="px-4 py-3">
                                        <div class="fw-semibold">@line.ProductName</div>
                                        @if (!string.IsNullOrEmpty(line.ManagerName))
                                        {
                                            <small class="text-muted">Vendido por: @line.ManagerName</small>
                                        }
                                    </td>
                                    <td class="px-3 py-3 text-center">@line.Quantity</td>
                                    <td class="px-3 py-3 text-center">
                                        <span class="badge @line.StatusBadgeClass">@line.StatusLabel</span>
                                    </td>
                                    <td class="px-4 py-3 text-end">@line.ProductPrice.ToString("0.00")&nbsp;€</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="border-top">
                                <td colspan="3" class="px-4 py-2 text-end text-muted small">Total Productos:</td>
                                <td class="px-4 py-2 text-end fw-semibold">@Model.Total.ToString("0.00")&nbsp;€</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            @* dirección + método de pago *@
            <div class="row g-3">

                @* Dirección de envío *@
                <div class="col-md-6">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <h6 class="fw-bold mb-3">
                                <i class="bi bi-house-door me-1"></i>Dirección de envío
                            </h6>
                            <p class="mb-1 fw-semibold">@Model.ClientName</p>
                            <p class="mb-1 small text-muted">@Model.ClientStreet @Model.ClientNumber</p>
                            <p class="mb-1 small text-muted">@Model.ClientCity, @Model.ClientProvince @Model.ClientPostalCode</p>
                            <p class="mb-0 small text-muted">@Model.ClientCountry</p>
                        </div>
                    </div>
                </div>

                @* Método de pago *@
                <div class="col-md-6">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <h6 class="fw-bold mb-3">
                                <i class="bi bi-credit-card me-1"></i>Método de pago
                            </h6>
                            <div class="d-flex align-items-center gap-2">
                                <i class="bi bi-credit-card-2-front-fill fs-4 text-primary"></i>
                                <span class="text-muted small">Tarjeta terminada en ****</span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">Resumen del pedido</h6>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted small">Artículos (@Model.TotalItems):</span>
                        <span class="small">@Model.Total.ToString("0.00")&nbsp;€</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted small">Envío:</span>
                        <span class="small text-success">Gratis</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between fw-bold">
                        <span>Total:</span>
                        <span style="color: #b12704; font-size: 1.15rem;">@Model.Total.ToString("0.00")&nbsp;€</span>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <a asp-controller="CartMvc" asp-action="MyOrders" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-arrow-left me-1"></i>Volver a mis pedidos
                </a>
            </div>
        </div>

    </div>
</div>
