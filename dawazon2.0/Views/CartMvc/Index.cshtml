@model dawazon2._0.Models.CartOrderDetailViewModel

@{
    ViewData["Title"] = "Tu carrito";
    bool isEmpty = ViewBag.CartEmpty is true || Model.TotalItems == 0;
}

<div class="container my-4">
    <h1 class="mb-4 fw-bold" style="font-size:1.6rem;">
        <i class="bi bi-cart3 me-2"></i>Tu carrito de Dawazon
    </h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (isEmpty)
    {
        <div class="text-center py-5">
            <i class="bi bi-cart-x" style="font-size:4rem; color:#ccc;"></i>
            <h4 class="mt-3 text-muted">Tu carrito está vacío</h4>
            <p class="text-muted">¡Añade productos para empezar a comprar!</p>
            <a asp-controller="ProductsMvc" asp-action="Index" class="btn btn-gradient mt-2">
                <i class="bi bi-shop me-1"></i>Ver productos
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">

            @* ── líneas del carrito ── *@
            <div class="col-12 col-lg-8">
                <div class="card shadow-sm border-0">
                    <div class="card-header d-flex justify-content-between align-items-center" style="background:#f8f9fa;">
                        <span class="fw-semibold">Carrito de compra</span>
                        <span class="text-muted small">Precio</span>
                    </div>
                    <div class="card-body p-0">
                        @foreach (var line in Model.Lines)
                        {
                            <div class="d-flex align-items-start gap-3 p-3 border-bottom">
                                @* Imagen placeholder del producto *@
                                <div style="width:72px; height:72px; background:#f0f0f0; border-radius:6px; display:flex; align-items:center; justify-content:center; flex-shrink:0;">
                                    <i class="bi bi-box-seam text-muted fs-4"></i>
                                </div>

                                <div class="flex-grow-1">
                                    <a asp-controller="ProductsMvc" asp-action="Detail"
                                       asp-route-id="@line.ProductId"
                                       class="text-decoration-none fw-semibold text-dark d-block mb-1">
                                        @line.ProductName
                                    </a>
                                    <span class="badge bg-success small mb-2">En stock</span>

                                    <div class="d-flex align-items-center gap-2 mt-2 flex-wrap">
                                        @* Botón − *@
                                        <form asp-controller="CartMvc" asp-action="DecreaseQty"
                                              asp-route-productId="@line.ProductId" method="post" style="margin:0">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-secondary btn-sm px-2 py-0"
                                                    style="min-width:28px; font-size:1rem; line-height:1.4;">−</button>
                                        </form>

                                        <span class="fw-semibold small" style="min-width:20px; text-align:center;">@line.Quantity</span>

                                        @* Botón + *@
                                        <form asp-controller="CartMvc" asp-action="IncreaseQty"
                                              asp-route-productId="@line.ProductId" method="post" style="margin:0">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-secondary btn-sm px-2 py-0"
                                                    style="min-width:28px; font-size:1rem; line-height:1.4;">+</button>
                                        </form>

                                        <span class="text-muted small mx-1">|</span>

                                        @* Botón Eliminar redirige al carrito *@
                                        <form asp-controller="CartMvc" asp-action="DeleteLine"
                                              asp-route-productId="@line.ProductId" method="post" style="margin:0">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-link btn-sm text-danger p-0 text-decoration-none">
                                                <i class="bi bi-trash me-1"></i>Eliminar
                                            </button>
                                        </form>
                                    </div>
                                </div>

                                <div class="text-end fw-bold" style="min-width:80px;">
                                    @line.TotalPrice.ToString("F2") €
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer text-end bg-white border-top">
                        <span class="small text-muted me-2">Subtotal (@Model.TotalItems producto@(Model.TotalItems != 1 ? "s" : "")):</span>
                        <strong style="font-size:1.1rem;">@Model.Total.ToString("F2") €</strong>
                    </div>
                </div>
            </div>

            @* ──  resumen y checkout ── *@
            <div class="col-12 col-lg-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <div class="alert alert-success py-2 small mb-3" role="alert">
                            <i class="bi bi-truck me-1"></i>
                            Tu pedido es elegible para envío <strong>GRATIS</strong>.
                        </div>

                        <p class="mb-1">
                            Subtotal (<strong>@Model.TotalItems</strong> producto@(Model.TotalItems != 1 ? "s" : "")):
                        </p>
                        <p class="fw-bold mb-3" style="font-size:1.4rem;">
                            @Model.Total.ToString("F2") €
                        </p>

                        <a asp-controller="CartMvc" asp-action="Checkout"
                           class="btn btn-gradient w-100 py-2 fw-semibold">
                            <i class="bi bi-credit-card me-1"></i>Continuar con el pago
                        </a>

                        <hr class="my-3">
                        <a asp-controller="ProductsMvc" asp-action="Index"
                           class="btn btn-outline-secondary w-100 btn-sm">
                            <i class="bi bi-arrow-left me-1"></i>Seguir comprando
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
