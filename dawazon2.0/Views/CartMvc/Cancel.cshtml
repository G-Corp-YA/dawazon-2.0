@{
    ViewData["Title"] = "Pago cancelado";
}

<div class="container my-5 text-center">
    <div class="row justify-content-center">
        <div class="col-12 col-md-7 col-lg-5">

            <div class="mb-4" style="font-size:5rem; color:#dc3545;">
                <i class="bi bi-x-circle-fill"></i>
            </div>

            <h1 class="fw-bold mb-2" style="font-size:1.8rem;">Pago cancelado</h1>
            <p class="text-muted mb-4">
                Tu pago no se ha procesado. Tu carrito sigue disponible y puedes intentarlo de nuevo cuando quieras.
            </p>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger small mb-4">
                    <i class="bi bi-exclamation-triangle me-1"></i>@TempData["Error"]
                </div>
            }

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center gap-3 text-start">
                        <i class="bi bi-info-circle fs-3 text-warning"></i>
                        <div>
                            <div class="fw-semibold small">No se realizó ningún cargo</div>
                            <div class="text-muted" style="font-size:.82rem;">
                                Puedes volver al carrito y reintentar el pago
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-3 justify-content-center mt-4">
                <a asp-controller="ProductsMvc" asp-action="Index"
                   class="btn btn-outline-secondary">
                    <i class="bi bi-house me-1"></i>Inicio
                </a>
                <a asp-controller="CartMvc" asp-action="Index"
                   class="btn btn-gradient">
                    <i class="bi bi-cart me-1"></i>Volver al carrito
                </a>
            </div>

        </div>
    </div>
</div>
