@model dawazon2._0.Models.UserEditViewModel

@{
    ViewData["Title"] = "Editar perfil";
}

<div class="container my-5" style="max-width: 640px;">

    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="UserMvc" asp-action="Profile">Mi perfil</a>
            </li>
            <li class="breadcrumb-item active">Editar</li>
        </ol>
    </nav>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">

            <h4 class="fw-bold mb-4">
                <i class="bi bi-pencil-square me-2"></i>Editar perfil
            </h4>

            <form asp-controller="UserMvc" asp-action="EditProfile" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="All" class="alert alert-danger" style="display:@(ViewData.ModelState.IsValid ? "none" : "block")"></div>

                @* ── Datos personales ── *@
                <h6 class="text-muted fw-semibold mb-3 text-uppercase" style="font-size: 0.75rem; letter-spacing: 1px;">Datos personales</h6>

                <div class="mb-3">
                    <label asp-for="Avatar" class="form-label fw-semibold"></label>
                    <input asp-for="Avatar" class="form-control" type="file" accept="image/*">
                    <span asp-validation-for="Avatar" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label fw-semibold"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre completo">
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control" placeholder="correo@ejemplo.com">
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Telefono" class="form-label fw-semibold"></label>
                    <input asp-for="Telefono" class="form-control" placeholder="9 dígitos (opcional)">
                    <span asp-validation-for="Telefono" class="text-danger small"></span>
                </div>

                <hr>

                @* ── Dirección ── *@
                <h6 class="text-muted fw-semibold mb-3 text-uppercase" style="font-size: 0.75rem; letter-spacing: 1px;">Dirección de envío</h6>

                <div class="mb-3">
                    <label asp-for="Calle" class="form-label fw-semibold"></label>
                    <input asp-for="Calle" class="form-control" placeholder="Ej: Calle Mayor 12">
                    <span asp-validation-for="Calle" class="text-danger small"></span>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-8">
                        <label asp-for="Ciudad" class="form-label fw-semibold"></label>
                        <input asp-for="Ciudad" class="form-control" placeholder="Ej: Madrid">
                        <span asp-validation-for="Ciudad" class="text-danger small"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="CodigoPostal" class="form-label fw-semibold"></label>
                        <input asp-for="CodigoPostal" class="form-control" placeholder="28001">
                        <span asp-validation-for="CodigoPostal" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Provincia" class="form-label fw-semibold"></label>
                    <input asp-for="Provincia" class="form-control" placeholder="Ej: Madrid">
                    <span asp-validation-for="Provincia" class="text-danger small"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-amazon px-4">
                        <i class="bi bi-check-lg me-1"></i>Guardar cambios
                    </button>
                    <a asp-controller="UserMvc" asp-action="Profile" class="btn btn-outline-secondary px-4">
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
