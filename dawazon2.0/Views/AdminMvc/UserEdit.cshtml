@model dawazon2._0.Models.UserEditViewModel

@{
    ViewData["Title"] = "Editar usuario";
    var userId = ViewBag.UserId as string;
}

<div class="container my-5" style="max-width: 640px;">

    <div class="d-flex align-items-center mb-4 gap-2">
        <a href="/admin/usuarios" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver
        </a>
        <h4 class="mb-0 ms-2 fw-bold">
            <i class="bi bi-pencil-square me-2 text-warning"></i>Editar usuario
        </h4>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <ul class="mb-0 ps-3">
                        @foreach (var error in ViewData.ModelState.Values
                            .SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form action="/admin/usuarios/@userId/editar" method="post">
                @Html.AntiForgeryToken()

                <div class="row g-3">

                    <div class="col-12">
                        <label asp-for="Nombre" class="form-label fw-semibold"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Nombre completo">
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>

                    <div class="col-md-7">
                        <label asp-for="Email" class="form-label fw-semibold"></label>
                        <input asp-for="Email" class="form-control" placeholder="correo@ejemplo.com">
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="col-md-5">
                        <label asp-for="Telefono" class="form-label fw-semibold"></label>
                        <input asp-for="Telefono" class="form-control" placeholder="600000000">
                        <span asp-validation-for="Telefono" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <hr class="my-1">
                        <p class="text-muted small mb-0">
                            <i class="bi bi-geo-alt me-1"></i>Dirección
                        </p>
                    </div>

                    <div class="col-12">
                        <label asp-for="Calle" class="form-label fw-semibold"></label>
                        <input asp-for="Calle" class="form-control" placeholder="Calle y número">
                        <span asp-validation-for="Calle" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Ciudad" class="form-label fw-semibold"></label>
                        <input asp-for="Ciudad" class="form-control" placeholder="Ciudad">
                        <span asp-validation-for="Ciudad" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="CodigoPostal" class="form-label fw-semibold"></label>
                        <input asp-for="CodigoPostal" class="form-control" placeholder="28000">
                        <span asp-validation-for="CodigoPostal" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Provincia" class="form-label fw-semibold"></label>
                        <input asp-for="Provincia" class="form-control" placeholder="Madrid">
                        <span asp-validation-for="Provincia" class="text-danger small"></span>
                    </div>

                </div>

                <div class="d-flex gap-2 justify-content-end mt-4">
                    <a href="/admin/usuarios/@userId" class="btn btn-outline-secondary">
                        Cancelar
                    </a>
                    <button type="submit" class="btn btn-warning fw-semibold">
                        <i class="bi bi-floppy me-1"></i>Guardar cambios
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
