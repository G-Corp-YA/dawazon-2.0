@model dawazon2._0.Models.AdminSaleListViewModel
@using dawazonBackend.Cart.Models

@{
    ViewBag.Title = "Ventas de mis productos";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4">
            <h4 class="mb-1 fw-bold text-dark">Ventas de mis productos</h4>
            <p class="text-muted small">Mostrando @Model.Sales.Count() de @Model.TotalElements ventas</p>
        </div>
        
        <div class="card-body px-0 pt-0 pb-2">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success mx-4" role="alert">
                    @TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger mx-4" role="alert">
                    @TempData["Error"]
                </div>
            }

            <div class="table-responsive p-0">
                <table class="table align-items-center mb-0 table-hover">
                    <thead class="bg-light">
                    <tr>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 px-4">ID Venta</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Código<br/>Producto</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Producto</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Cliente</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Cantidad</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Estado</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Precio<br/>Unit.</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Total</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var sale in Model.Sales)
                    {
                        var statusBadgeClass = sale.Status switch
                        {
                            Status.Preparado => "bg-warning text-dark",
                            Status.EnCarrito => "bg-secondary",
                            Status.Enviado => "bg-info text-white",
                            Status.Recibido => "bg-success bg-opacity-25 text-success",
                            Status.Cancelado => "bg-danger text-white",
                            _ => "bg-secondary"
                        };
                        
                        var trClass = sale.Status == Status.Cancelado ? "opacity-75 bg-light" : "";

                        <tr class="@trClass">
                            <td class="px-4">
                                <span class="text-secondary text-sm font-weight-bold" title="@sale.SaleId">
                                    @(sale.SaleId.Length > 8 ? sale.SaleId.Substring(0, 8) + "..." : sale.SaleId)
                                </span>
                            </td>
                            <td>
                                <span class="text-secondary text-sm font-weight-bold">
                                    @(sale.ProductId.Length > 12 ? sale.ProductId.Substring(0, 12) + "..." : sale.ProductId)
                                </span>
                            </td>
                            <td>
                                <span class="text-dark text-sm font-weight-bold">@sale.ProductName</span>
                            </td>
                            <td>
                                <div class="d-flex flex-column justify-content-center">
                                    <h6 class="mb-0 text-sm">@sale.GetUserEmail()</h6>
                                    @if (!string.IsNullOrEmpty(sale.GetUserName()))
                                    {
                                        <p class="text-xs text-secondary mb-0">@sale.GetUserName()</p>
                                    }
                                </div>
                            </td>
                            <td class="align-middle text-center">
                                <span class="text-secondary text-sm font-weight-bold">@sale.Quantity</span>
                            </td>
                            <td class="align-middle text-center">
                                <span class="badge badge-sm @statusBadgeClass py-2 px-3 rounded-2 text-uppercase fw-bold" style="letter-spacing: 0.5px;">
                                    @sale.Status
                                </span>
                            </td>
                            <td class="align-middle text-center">
                                <span class="text-secondary text-sm font-weight-bold">@sale.ProductPrice.ToString("C")</span>
                            </td>
                            <td class="align-middle text-center">
                                <span class="text-dark text-sm font-weight-bold">@sale.TotalPrice.ToString("C")</span>
                            </td>
                            <td class="align-middle text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <a href="@Url.Action("SaleEdit", "ManagerMvc", new { id = sale.SaleId, productId = sale.ProductId })" 
                                       class="btn btn-warning btn-sm mb-0 px-3 py-1 rounded-2 shadow-sm text-dark fw-bold d-flex align-items-center gap-1">
                                        Editar
                                    </a>
                                    
                                    @if (sale.Status != Status.Cancelado)
                                    {
                                        <form method="post" action="@Url.Action("SaleCancel", "ManagerMvc", new { id = sale.SaleId, productId = sale.ProductId })" class="m-0" onsubmit="return confirm('¿Estás seguro de que deseas cancelar esta venta de @sale.ProductName?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger bg-danger bg-opacity-10 text-danger border-0 btn-sm mb-0 px-3 py-1 rounded-2 d-flex align-items-center gap-1">
                                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <path d="M3 6h18"></path>
                                                    <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path>
                                                    <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path>
                                                </svg>
                                                Cancelar
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>

            <div class="card-footer bg-white border-top border-light py-3 px-4 d-flex justify-content-end align-items-center">
                <h5 class="mb-0 text-dark fw-bold">
                    Ganancias estimadas: <span class="text-dark ms-2">@Model.TotalEarnings.ToString("C")</span>
                </h5>
            </div>
        </div>
    </div>
    
    <!-- Paginación -->
    @if (Model.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Navegación de páginas">
                <ul class="pagination pagination-primary justify-content-center">
                    <li class="page-item @(Model.PageNumber == 0 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Sales", "ManagerMvc", new { page = Model.PageNumber - 1, size = Model.PageSize })" tabindex="-1">Anterior</a>
                    </li>
                    @for (int i = 0; i < Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Sales", "ManagerMvc", new { page = i, size = Model.PageSize })">@(i + 1)</a>
                        </li>
                    }
                    <li class="page-item @(Model.PageNumber == Model.TotalPages - 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Sales", "ManagerMvc", new { page = Model.PageNumber + 1, size = Model.PageSize })">Siguiente</a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<style>
    .table th { border-bottom: 2px solid #e9ecef; border-top: 0; }
    .table td { border-bottom: 1px solid #e9ecef; vertical-align: middle; }
    .pagination-primary .page-item.active .page-link { background-color: #0d6efd; border-color: #0d6efd; }
    .page-link { color: #495057; border-radius: 6px; margin: 0 4px; border: none; }
    .page-link:hover { background-color: #e9ecef; }
    .btn-warning { background-color: #fbcf33; border-color: #fbcf33; }
    .btn-warning:hover { background-color: #ecc027; border-color: #ecc027; }
</style>
