meta {
  name: 00b-Login-Manager-Setup
  type: http
  seq: 0.5
}

post {
  url: {{baseUrl}}/api/auth/login
  body: json
  auth: none
}

body:json {
  {
    "usernameOrEmail": "manager@manager.com",
    "password": "Manager123!"
  }
}

script:post-response {
  if (res.status === 200) {
    bru.setEnvVar("managerToken", res.body.token);
  }
}

tests {
  test("Setup: Login como manager OK", function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.have.property("token");
  });
}
