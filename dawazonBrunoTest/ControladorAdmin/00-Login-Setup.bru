meta {
  name: 00-Login-Setup
  type: http
  seq: 0
}

post {
  url: {{baseUrl}}/api/auth/login
  body: json
  auth: none
}

body:json {
  {
    "usernameOrEmail": "admin@admin.com",
    "password": "Admin123!"
  }
}

script:post-response {
  if (res.status === 200) {
    bru.setVar("adminToken", res.body.token);
  }
}

tests {
  test("Setup: Login admin OK", function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.have.property("token");
  });
}
